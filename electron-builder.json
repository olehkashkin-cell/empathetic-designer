{
  "appId": "com.voiceai.assistant",
  "productName": "AI Помощник",
  "directories": {
    "buildResources": "public",
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "public/icon-*.png"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "public/icon-512.png",
    "artifactName": "${productName}-Setup-${version}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "AI Помощник"
  },
  "mac": {
    "target": "dmg",
    "icon": "public/icon-512.png",
    "category": "public.app-category.productivity"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "public/icon-512.png",
    "category": "Utility"
  }
}
